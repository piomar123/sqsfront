<div class="container">
  <% if(successFilename){ %>
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div class="alert alert-success">
        File <b><%= successFilename %></b> uploaded to S3 storage.
      </div>
    </div>
  </div>
  <% } %>
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Upload image</h3>
        </div>
        <div class="panel-body">
          <form action="<%= s3form.action %>" method="POST" id="s3-upload-form" class="form-horizontal" enctype="multipart/form-data">
            <% Object.keys(s3form.fields).forEach(function(key){
              %><input type="hidden" name="<%= key %>" value="<%= s3form.fields[key] %>"/>
            <%});%>
            <div class="form-group">
              <input type="file" name="<%= s3form.filefield %>" class="col-sm-12 form-control-file" style="color: #c8c8c8;"/>
            </div>
            <div class="form-group">
              <p class="col-sm-12 text-muted">File will be send to the bucket <b><%= s3form.bucket %></b></p>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-8">
                <input type="submit" class="btn btn-success btn-block" value="Upload"/>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
